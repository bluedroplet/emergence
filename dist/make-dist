#!/bin/bash -v

ver=0.6-dev

cd ../em-tools
make distclean
aclocal-1.8 || exit
automake-1.8 || exit
autoconf-2.59 || exit

cd ../em-game
make distclean
aclocal-1.8 || exit
automake-1.8 || exit
autoconf-2.59 || exit

cd ../em-tools

./configure || exit

#make distcheck || exit

#cp em-tools-$ver.tar.bz2 ../dist/em-tools-$ver.tbz2

cd ../dist


#for arch in i386 i686 pentium3 pentium4 athlon-xp
for arch in pentium3
do

stage3=i686

if  [ $arch == i386 ] 
	then stage3=x86
fi

if  [ $arch == pentium3  -o  $arch == pentium4  -o $arch == athlon-xp ] 
	then stage3=$arch
fi

echo Building Emergence for $arch

export CFLAGS="-march=$arch -O3 -pipe -fomit-frame-pointer"
ln -sfn stage3-$stage3-2004.1 ../../stage3s/current-stage3 || exit


rm -rf emergence
mkdir -p emergence/usr

cd ../em-game
make clean

D=`pwd`/../dist/emergence/

./configure --prefix=/usr || exit
make || exit
make prefix=${D}/usr \
		    bindir=${D}/usr/bin \
		    datadir=${D}/usr/share \
			install || exit

cd ../dist/emergence

strip usr/bin/* || exit
tar --owner=0 --group=0 --numeric-owner -cjf ../em-game-$ver.bin.$arch.tbz2 * || exit
cd ..


cd ../em-tools
make clean

#./configure --prefix=/usr || exit
#make || exit
#make prefix=${D}/usr \
#		    bindir=${D}/usr/bin \
#		    datadir=${D}/usr/share \
#		    install || exit


cd ../dist/emergence

strip usr/bin/* || exit

tar --owner=0 --group=0 --numeric-owner -cjf ../emergence-$ver.bin.$arch.tbz2 * || exit


cd emergence



find * -type f -printf "/%h/%f\n">../tree

cd ..



rpmbuild -bb emergence.spec

cp ../../redhat/emergence/i386/emergence-$ver-1.i386.rpm emergence-$ver.$arch.rpm


rm -rf emergence
mkdir emergence


cd ../em-game


make prefix=${D} \
		    bindir=${D} \
		    datadir=${D}/share \
			pkgdatadir=${D}/share \
		    install || exit



cd ../em-tools

#make prefix=${D} \
#		    bindir=${D} \
#		    datadir=${D}/share \
#			pkgdatadir=${D}/share \
#		    install || exit


cd ../dist

strip emergence/em-client || exit
strip emergence/em-server || exit

tar --owner=0 --group=0 --numeric-owner -cjf emergence-$ver.bin.$arch.home.tbz2 emergence || exit




done


arch=pentium3
stage3=pentium3

echo Building Nonauthenticating Emergence for $arch

export CFLAGS="-march=$arch -O3 -pipe -fomit-frame-pointer"
ln -sfn stage3-$stage3-2004.1 ../../stage3s/current-stage3 || exit


rm -rf emergence
mkdir emergence

cd ../em-game
make clean

D=`pwd`/../dist/emergence/

./configure --prefix=/usr --enable-nonauthenticating || exit
make || exit
make prefix=${D} \
		    bindir=${D} \
		    datadir=${D}/share \
			pkgdatadir=${D}/share \
		    install || exit

cd ../dist/

strip emergence/em-client || exit
strip emergence/em-server || exit

tar --owner=0 --group=0 --numeric-owner -cjf emergence-$ver.nonauth.bin.$arch.home.tbz2 emergence || exit

